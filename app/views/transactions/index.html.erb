<div class="row valign-wrapper">
  <div class="col s2"><h2 class="section-title">Transactions</h2></div>
  <div class="col s3 offset-s7">
    <%= link_to "New transaction", new_transaction_path, class: "waves-effect waves-light btn blue darken-1" %>
  </div>
</div>

<div class="row">
  <div class="col s12">
    <table>
      <thead>
        <tr>
            <th>ID</th>
            <th>From</th>
            <th>To</th>
            <th>Amount</th>
            <th>Currency</th>
            <th>Status</th>
            <th>Created At</th>
        </tr>
      </thead>

      <tbody>
        <% @all_user_transactions.each do |transaction| %>
          <tr>
            <td><%= transaction.id %></td>
            <td><%= transaction.sender.name %></td>
            <td><%= transaction.receiver.name %></td>
            <td class="transaction <%if transaction.sender == current_user%>outgoing<%else%>incoming<%end%>">
              <%= transaction.amount %>
            </td>
            <td><%= transaction.source_currency.upcase %> -> <%= transaction.target_currency.upcase %></td>
            <td><%= transaction.status_text %></td>
            <td><%= transaction.created_at %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
